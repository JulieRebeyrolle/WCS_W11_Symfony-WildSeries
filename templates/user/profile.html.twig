{% extends "base.html.twig" %}
{% block title %}{{ user.email }}{% endblock %}


{% block body %}
    <h1 class="text-center mt-5">{{ 'user.welcome'|trans }} {{ user.email }}</h1>

    <div class="container my-5">

        <h2>{{ 'user.programs'|trans }}</h2>

        <div class="row">
            {% for program in user.programs %}
                <div class="col-lg-4 col-md-6 col-sm-12 ">
                    <div class="card my-2 mx-1">
                        <img class="card-img-top poster-thumbnail p-0" src="{{ program.poster }}" alt="{{ program.title }} poster">
                        <div class="card-body">
                            <h2 class="card-title d-block">{{ program.title }}</h2>
                            <p class="card-subtitle font-weight-bold">{{ program.category.name }}</p>
                            <p class="card-text synopsis">{{ program.summary }}</p>
                        </div>
                        <div class="text-center card-footer">
                            <a class="btn-primary btn " href="{{ path("program_show", { slug: program.slug }) }}">{{ 'button.seeprogram'|trans }}</a>
                        </div>
                    </div>
                </div>
            {% else %}
                {{ 'notfound.program'|trans }}
            {% endfor %}
        </div>
    </div>

    <div class="container my-5">

        <h2>{{ 'user.comments'|trans }}</h2>

        {% for comment in user.comments %}
            <div class="card m-3 p-3 bg-light card-body border-primary">

                <h5 class="card-title">{{ comment.episode.title }}</h5>
                <p class="card-subtitle font-weight-bold">{{ 'user.rate'|trans }} {{ comment.rate }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                         fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173
                            6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184
                            4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8
                            13.187l-4.389 2.256z"/>
                    </svg>
                </p>

                <p class="pl-3 font-italic card-text">{{ 'user.comment'|trans }} :{{ comment.comment }}</p>
            </div>
        {% else %}
            <p>{{ 'notfound.comment'|trans }}</p>
        {% endfor %}
    </div>
{% endblock %}