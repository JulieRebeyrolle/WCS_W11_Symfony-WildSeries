{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ season.programId.title}} - Saison {{ season.number }}</h1>



    <div class="container">

        <div class="d-flex justify-content-around my-5">
            <a href="{{ path('season_edit', {'id': season.id}) }}" class="btn btn-primary">Modifier</a>

            {{ include('season/_delete_form.html.twig') }}
        </div>


        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('season_index') }}" class="btn-primary btn my-5">Revenir Ã  la liste </a>

    </div>





{% endblock %}
