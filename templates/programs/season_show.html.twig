{% extends "base.html.twig" %}

{% block title %}{{ program.title }} #{{ season.number }}{% endblock %}

{% block body %}

            <h1 class="mt-0">{{ program.title }} - Saison {{ season.number }}</h1>
            <h2>Sortie en : {{ season.year }}</h2>
            <p>{{ season.description }}</p>

            <h3>Liste des épisodes :</h3>
            <div class="mx-5">
                {% for episode in season.episodes %}
                    <h4>{{ episode.number }} - {{ episode.title }}</h4>
                    <p>{{ episode.synopsis }}
                    </br>
                    <a href={{ path('program_episode_show',
                        { program: program.slug, season: season.id, episode: episode.slug}) }}>Voir l'épisode</a>
                    </p>
                {% endfor %}
            </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>



{% endblock %}
