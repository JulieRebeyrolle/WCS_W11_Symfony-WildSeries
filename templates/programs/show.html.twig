{% extends "base.html.twig" %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3 vh-100" src="/uploads/{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <div class="d-flex align-items-md-center justify-content-between">
                <div>
                    <h1 class="mt-0 d-inline-block">{{ program.title }}</h1>
                    {% if app.user %}
                        <button id="watchlist" >
                            <i id="watchlistIcon" class="watchlist {{ app.user.isInWatchlist(program) ? 'fas' : 'far' }} fa-heart fa-2x ml-2"
                               data-href="{{ path("program_watchlist", { slug: program.slug}) }}"
                            ></i>
                        </button>

                    {% endif %}
                </div>

                {% if is_granted("ROLE_ADMIN") or app.user == program.owner %}
                <a href="{{ path("program_edit", { slug: program.slug}) }}"
                   class="btn btn-primary mr-3">{{ 'edit.edit'|trans }}</a>
                {% endif %}
            </div>

            <p>{{ program.summary }}</p>
            <p> {{ 'category.category'|trans }} : {{ program.category.name }}</p>
            <a href="{{ path('program_index') }}">
                {{ 'nav.program-list'|trans }}
            </a>

            {% for season in program.seasons %}
                <h2 class="mt-5">{{ 'season.season'|trans }} {{ season.number }} ({{ season.year }})</h2>
                <p>{{ season.description }}</p>
                <a href={{ path('program_season_show', { program: program.slug, season: season.id}) }}>{{ 'season.see-episodes'|trans }}</a>
            {% endfor %}
            <div class="my-5">
                <h2>{{ 'title.all-actors'|trans }}</h2>

            <div class="row">
            {% for actor in program.actors %}
            <div class="col-lg-3 col-md-4 col-sm-6 ">
                <div class="card my-2 mx-1 border-0">
                        <img class="actor-card-img-top align-self-center" src="/uploads/{{ actor.picture }}" alt="{{ actor.name }} picture">
                    <div class="actor-card-body text-center p-3">
                        <h5 class="actor-card-title"><a href="{{ path('actor_show', { id: actor.id} ) }}">{{ actor.name }}</a></h5>
                    </div>
                </div>
            </div>
            {% else %}
                <p>{{ 'notfound.actor-program'|trans }}</p>
            {% endfor %}
            </div>


            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('watchlist') }}
    {{ parent() }}
{% endblock %}
