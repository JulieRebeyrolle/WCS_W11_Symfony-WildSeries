{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ episode.seasonId.programId.title}} - Saison {{ episode.seasonId.number }} - Episode {{ episode.number }}</h1>

    <div class="container">

        <div class="d-flex justify-content-around my-5">
            <a href="{{ path('episode_edit', {'slug': episode.slug}) }}" class="btn btn-primary">Modifier</a>
            {{ include('episode/_delete_form.html.twig') }}
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ episode.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ episode.title }}</td>
                </tr>
                <tr>
                    <th>Number</th>
                    <td>{{ episode.number }}</td>
                </tr>
                <tr>
                    <th>Synopsis</th>
                    <td>{{ episode.synopsis }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('episode_index') }}" class="btn-primary btn my-5">Revenir Ã  la liste </a>
    </div>
{% endblock %}
